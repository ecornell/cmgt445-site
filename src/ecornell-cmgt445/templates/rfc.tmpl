<div class="container">

	<div class="row">

		{{if .note}}
		<div class="alert alert-success" role="alert">{{.note}}</div>
		{{end}} {{if .error}}
		<div class="alert alert-danger" role="alert">{{.error}}</div>
		{{end}}

		<h2>Standard Change Request</h2>

		<form id="form" method="post" action="/bug">

			<div class="form-group">
				<label for="inputDesc">Change Requestor *</label>
				<input class="form-control" id="inputRequestor" name="requestor" placeholder="Required">
			</div>

			<div class="form-group">
				<label for="inputDesc">Change Category (Check all that apply) *</label> <br />
				<label class="checkbox-inline">
					<input type="checkbox" id="inlineCatSchedule" value="cat-schedule"> Schedule
				</label>
				<label class="checkbox-inline">
					<input type="checkbox" id="inlineCatCost" value="cat-cost"> Cost
				</label>
				<label class="checkbox-inline">
					<input type="checkbox" id="inlineCatScope" value="cat-scope"> Scope
				</label>
				<label class="checkbox-inline">
					<input type="checkbox" id="inlineCatReq" value="cat-req"> Requirements/Deliverables
				</label>
				<label class="checkbox-inline">
					<input type="checkbox" id="inlineCatTest" value="cat-test"> Testing/Quality
				</label>
				<label class="checkbox-inline">
					<input type="checkbox" id="inlineCatResource" value="cat-resource"> Resources
				</label>
			</div>

			<div class="form-group">
				<label for="inputSteps">Steps to reproduce:</label>
				<textarea id="inputSteps" class="form-control" rows="8" name="steps"></textarea>
			</div>

			<button type="submit" class="btn btn-default">Submit</button>

		</form>

	</div>

</div>

<script src="js/jquery.min.js"></script>
<script src="js/bootstrap.min.js"></script>
<script>
	$(document).ready(function() {
		$('#nav-forms').addClass('active');
		$('#inputTitle').focus();
	});
</script>
